{
    "data_dir": "data",
    "models_dir": "models",
    "logs_dir": "logs",
    "vol_window": 30,
    "annualization_factor": 365,
    "api": {
        "yfinance": {
            "rate_limit": 2000,
            "retry_attempts": 3,
            "retry_delay": 1
        },
        "deribit": {
            "test_mode": true,
            "rate_limit": 1000,
            "retry_attempts": 3,
            "retry_delay": 1
        }
    },
    "model": {
        "default_window": 30,
        "train_test_split": 0.8,
        "validation_split": 0.1,
        "random_state": 42
    },
    "logging": {
        "level": "INFO",
        "format": "json",
        "max_size": 10485760,
        "backup_count": 5
    }
} 